<%= form_with(model: listing) do |form| %>
  <% if listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
        <% listing.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group mb-2">
    <!-- <%= form.label :company_name %> -->
    <%= form.text_field :company_name, id: :listing_company_name, class:"form-control", value:current_user.company_name  %>
  </div>

  <div class="field form-group mb-2">
    <!-- <%= form.label :short_description %> -->
    <%= form.text_field :short_description, class:"form-control", placeholder:"Short Description"  %>
  </div>

  <div class="field form-group mb-2">
    <!-- <%= form.label :long_description %> -->
    <%= form.text_area :long_description, class:"form-control", placeholder:"Long Description"  %>
  </div>

  <div class="field form-group mb-2">
    <!-- <%= form.label :requirement %> -->
    <%= form.text_field :requirement, class:"form-control", placeholder:"Requirement" %>
  </div>

  <div class="field form-group mb-2">
    <!-- <%= form.label :top_three_target_locations %> -->
    <%= form.text_field :top_three_target_locations, class:"form-control", placeholder:"Top three target locations"  %>
  </div>

  <div class="field form-group mb-2">
    <!-- <%= form.label :size_guide %> -->
    <%= form.text_field :size_guide, class:"form-control", placeholder:"Size Guide"  %>
  </div>

  <div class="field form-group mb-2">
    <!-- <%= form.label :budget %> -->
    <%= form.text_field :budget, class:"form-control", placeholder:"Budget"  %>
  </div>

  <div class="field form-group mb-2">
    <!-- <%= form.label :user_id %> -->
    <%= form.number_field :user_id, id: :listing_user_id, class:"form-control", value:current_user.id, type: :hidden  %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-secondary"%>
  </div>
<% end %>
